<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wrapper"
    android:layout_width="@dimen/_193sdp"
    android:layout_height="wrap_content"
    android:padding="@dimen/_6sdp">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_77sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/mainMsg"
        android:layout_width="@dimen/_162sdp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/droid_serif"
        android:layout_alignWithParentIfMissing="true"
        app:layout_constraintTop_toBottomOf="@id/photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/secMsg"
        android:layout_width="@dimen/_131sdp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mainMsg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/droid_serif"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center"
        android:textSize="@dimen/_12ssp" />

    <Button
        android:id="@+id/dialog_btn"
        android:layout_width="@dimen/_123sdp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/secMsg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:gravity="center"
        android:fontFamily="@font/droid_serif_bold_italic"
        android:textAllCaps="false"
        android:paddingHorizontal="@dimen/_4sdp"
        android:paddingVertical="@dimen/_4sdp"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold" />
</androidx.constraintlayout.widget.ConstraintLayout>