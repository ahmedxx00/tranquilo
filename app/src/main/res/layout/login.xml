<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mastard"
    android:gravity="center_horizontal"
    android:fitsSystemWindows="true"
    tools:context=".activities.Login">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="@dimen/_92sdp"
        android:layout_height="@dimen/_52sdp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_8sdp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        android:src="@drawable/logo" />

    <ScrollView
        android:id="@+id/scrV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_logo"
        android:layout_above="@id/lk"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_15sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/u_login_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:focusableInTouchMode="true"
                android:gravity="center_horizontal"
                android:hint="@string/pho_"
                android:textColorHint="@color/grey"
                app:boxBackgroundMode="filled"
                app:boxCollapsedPaddingTop="@dimen/_2sdp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:counterEnabled="true"
                app:counterMaxLength="11"
                app:counterTextAppearance="@style/errTxt"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/errTxt"
                app:hintTextAppearance="@style/errTxt">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="@dimen/_216sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_mastard"
                    android:digits="@string/phone_validate"
                    android:drawableStart="@drawable/ic_mobile"
                    android:drawableEnd="@drawable/hdn_rt"
                    android:gravity="bottom|center_horizontal"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingStart="@dimen/_3sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"
                    android:fontFamily="@font/droid_serif"
                    android:shadowColor="@color/white"
                    android:shadowRadius="0.5" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/u_login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/u_login_phone"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:focusableInTouchMode="true"
                android:gravity="center_horizontal"
                android:hint="@string/pas_"
                android:textColorHint="@color/grey"
                app:boxBackgroundMode="filled"
                app:boxCollapsedPaddingTop="@dimen/_2sdp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:counterEnabled="true"
                app:counterMaxLength="15"
                app:counterTextAppearance="@style/errTxt"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/errTxt"
                app:hintTextAppearance="@style/errTxt"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/grey">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="@dimen/_216sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_mastard"
                    android:digits="@string/password_validate"
                    android:drawableStart="@drawable/ic_pass"
                    android:gravity="bottom|center_horizontal"
                    android:imeOptions="flagForceAscii"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:paddingStart="@dimen/_3sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"
                    android:fontFamily="@font/droid_serif"
                    android:shadowColor="@color/white"
                    android:shadowRadius="0.5" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/u_login_password"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:background="@drawable/roundy"
                android:elevation="@dimen/_4sdp"
                android:fontFamily="@font/droid_serif"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:shadowColor="@color/black"
                android:stateListAnimator="@null"
                android:text="@string/login_button"
                android:textColor="@color/white"
                android:textSize="@dimen/la_lb"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/lk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@id/country"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/droid_serif_bold"
            android:text="@string/new_u" />

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardElevation="0dp"
            android:layoutDirection="rtl"
            android:layout_marginBottom="@dimen/_5sdp">

            <ImageButton
                android:id="@+id/checkCode"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@color/green"
                android:src="@drawable/ic_d_arrow"
                android:contentDescription="@string/app_name"
                android:paddingHorizontal="@dimen/_4sdp"
                android:paddingVertical="@dimen/_4sdp" />

            <EditText
                android:id="@+id/checkCodeET"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="match_parent"
                android:inputType="textNoSuggestions|textVisiblePassword"
                android:gravity="center"
                android:maxLength="14"
                android:layout_gravity="end"
                android:fontFamily="@font/droid_serif"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:hint="@string/enterCode"
                android:autofillHints=""
                android:background="@android:color/transparent" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/ar"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:button="@drawable/radio_selector"
            android:background="@drawable/inset_ar"
            android:layout_marginEnd="@dimen/_7sdp" />

        <RadioButton
            android:id="@+id/en"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:button="@drawable/radio_selector"
            android:background="@drawable/inset_en"
            android:layout_marginEnd="@dimen/_7sdp" />

        <RadioButton
            android:id="@+id/es"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:button="@drawable/radio_selector"
            android:background="@drawable/inset_es"
            android:layout_marginEnd="@dimen/_7sdp" />

        <RadioButton
            android:id="@+id/fr"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:button="@drawable/radio_selector"
            android:background="@drawable/inset_fr" />
    </RadioGroup>

</RelativeLayout>


